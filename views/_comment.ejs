<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

<div id = "comment-<%= comment._id %>"  class = 'comment-list'>
          
         <div>
           <span><img src="<%= comment.user.avatar%>" alt="user"></span>
           <span><%= comment.user.name %></span>
          </div>
         <p><%= comment.content %></p>
          <% if(comment.user.id == locals.user.id||post.user.id == locals.user.id) { %>
              <small>
                <a class = "delete-comment-button" href="/comments/distroy/<%= comment.id%>">
                  <i class="fa fa-times-circle" style="font-size:40px;color:red"></i>
                </a>
             </small>
          <%}%>
           <a class="toggle-like-button" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%=comment._id%>&type=Comment">
            <%= comment.likes.length %>
            <% if(comment.liked) {%>
              <i class="fa fa-thumbs-up" style="color:rgb(31, 78, 207)"></i>
            <%}else {%>
              <i class="fa fa-thumbs-up" style="color:grey"></i>
            <%}%>
           
          </a>
</div>